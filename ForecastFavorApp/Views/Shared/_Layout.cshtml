<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ForecastFavorApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ForecastFavorApp.styles.css" asp-append-version="true" />
    <!-- Include FontAwesome -->
    <!-- Use FontAwesome 5.15.3 for more features and icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3" style="background-color: #24367b5c;box-shadow: 0 .25rem .75rem rgba(54, 193, 200, 0.4);">
            <div class="container-fluid">
                <a class="navbar-brand nav-link" asp-area="" asp-controller="Home" asp-action="Index"> <i class=" fa fa-cloud"> </i> Forecast Favor </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Weather" asp-action="Index">Today</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Weather" asp-action="Tomorrow">Tomorrow</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Weather" asp-action="GetMultipleDayForecast">3 Day Forecast</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Preferences" asp-action="Index">User Preferences</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                    </ul>
                </div>
                <div class="search-container">
                    <input id="searchForecastInput" type="search" class="search-box" placeholder="Enter a location...">
                    <button id="searchForecastBtn" class="search-btn">Search</button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ForecastFavor - <a asp-area="" asp-controller="Home" asp-action="Index">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Include the SignalR JavaScript client library -->
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <!-- Include the custom JavaScript file for establishing and managing the SignalR connection -->
    <script src="~/js/signalr-connection.js"></script>

    <script>// Function to fetch current weather for a given city
        // Search button click
        document.getElementById("searchForecastBtn").addEventListener("click", function () {
            // Send a request to the Index action method
            let city = document.getElementById("searchForecastInput").value;
            console.log('searching city');

            window.location.href = `/Weather/Index?city=${city}`;
        });
    </script>
</body>
</html>