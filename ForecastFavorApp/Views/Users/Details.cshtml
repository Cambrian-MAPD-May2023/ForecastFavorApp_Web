@model ForecastFavorLib.Models.User

@{
    ViewData["Title"] = "Details";
}


<div>
    <a href="@Url.Action("Index", "Users" )" class="btn btn-primary btn-sm">
        <i class="fa fa-angle-left"></i>
        <span style="font-weight:bold; text-transform:uppercase;">Back to Users</span>
    </a>
    <h4 class="text-center">Details for @Model.Username</h4>
</div>

<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.UserID" class="btn btn-success">Update details</a>
</div>
<style>
    a {
        text-decoration: none;
    }
</style>