@model IEnumerable<ForecastFavorLib.Models.Preferences>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotificationTriggers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreferredLocations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationTriggers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreferredLocations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PreferencesID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PreferencesID">Details</a> |
