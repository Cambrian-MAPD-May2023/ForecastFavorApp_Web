@model ForecastFavorLib.Models.Preferences

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Preferences</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PreferencesID" />
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="NotifyOnRain" class="control-label"></label>
                <input asp-for="NotifyOnRain" type="checkbox" /> Notify on Rain
            </div>
            <div class="form-group">
                <label asp-for="NotifyOnSun" class="control-label"></label>
                <input asp-for="NotifyOnSun" type="checkbox" /> Notify on Sun
            </div>
             <div class="form-group">
                <label asp-for="NotifyOnClouds" class="control-label"></label>
                <input asp-for="NotifyOnClouds" type="checkbox" /> Notify on Clouds
            </div>
            <div class="form-group">
                <label asp-for="NotifyOnSnow" class="control-label"></label>
                <input asp-for="NotifyOnSnow" type="checkbox" /> Notify on Snow
            </div>
            <div class="form-group">
                <label asp-for="PreferredLocations" class="control-label"></label>
                <input asp-for="PreferredLocations" class="form-control" />
                <span asp-validation-for="PreferredLocations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
