@model ForecastFavorLib.Models.Preferences

@{
    ViewData["Title"] = "Details";
}

<div>
    <a href="@Url.Action("Index", "Users" )" class="btn btn-primary btn-sm">
        <i class="fa fa-angle-left"></i>
        <span style="font-weight:bold; text-transform:uppercase;">Back to preferences</span>
    </a>
    <h4 class="text-center">Details for @Model.User.Username</h4>
</div>

<hr />

<div>
    <h4>Preferences</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Notify on Rain
        </dt>
        <dd class="col-sm-10">
            @(Model.NotifyOnRain ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Notify on Sun
        </dt>
        <dd class="col-sm-10">
            @(Model.NotifyOnSun ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Notify on Clouds
        </dt>
        <dd class="col-sm-10">
            @(Model.NotifyOnClouds ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Notify on Snow
        </dt>
        <dd class="col-sm-10">
            @(Model.NotifyOnSnow ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PreferredLocations)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PreferredLocations)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PreferencesID" class="btn btn-success">Update Details</a> 
</div>
<style>
    a {
        text-decoration: none;
    }
</style>